      <h3 class="text-light mb-5">Welcome, please login</h3>
      <form 
      action="/route/submit" 
      method="POST" 
      style="width: 400px" id="loginForm">
        <div class="mb-3">
          <input placeholder="Email" type="email" class="form-control" id="email" name='email'>
        </div>
        <div class="mb-3">
          <input placeholder="Password" type="password" class="form-control" id="password" name="password">
        </div>
          <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>

      
      <% if (error) { %>
        <p style="color: red"><%= error %></p>
      <% } %>
      </div>
      
    </div>
    
    <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>
